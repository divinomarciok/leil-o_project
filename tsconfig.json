{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*", "api/**/*.ts"],
  "exclude": ["node_modules"]
}
